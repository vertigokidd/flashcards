<%= erb :_navbar %>

<div class="trebek">
</div>
<div class="card-info">
  <div class ="question"><%= @deck.first.question %></div>
  <div id="incorrect" class="answer-eval"></div>
  <div id="correct" class="answer-eval"></div>
</div>

<div class="guess">
  <form id="guess" action="/round" method="POST">
    <input type="text" name="guess" placeholder="Enter answer">
    <input type="hidden" name="deck" value="<%=@deck.first.deck_id %>">
    <input type="hidden" name="card" value="<%=@deck.first.id %>">
    <input type="Submit">
  </form>
</div>
